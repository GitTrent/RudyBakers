@model RudyBakers.Data.Model.Price

	<div class="form-horizontal">
		@Html.ValidationSummary(true, "", new {@class = "text-danger"})
		@Html.HiddenFor(model => model.ID)
		@Html.EditorFor(model => model.Amount, new {htmlAttributes = new {@class = "form-control-inline"}})
		@Html.EnumDropDownListFor(model => model.Unit, htmlAttributes: new {@class = "form-control-inline"})
		@Html.ValidationMessageFor(model => model.Unit, "", new {@class = "text-danger"})
		@Html.ValidationMessageFor(model => model.Amount, "", new {@class = "text-danger"})
		@Html.ActionLink("Delete Price","DeletePrice", new {id=Model.ID})
		
	</div>


